{% extends "layout/base.html" %}

{% block content %}




<div STYLE=" height: 500px; width: 1000px; font-size: 18px; overflow: auto;">

<div class = "container">



<style style="text/css">
  	.hoverTable{
		width:100%; 
		border-collapse:collapse; 
	}
	.hoverTable td{ 
		padding:7px; border:#4e95f4 1px solid;
	}
	/* Define the default color for all the table rows */
	.hoverTable tr{
		background: #b8d1f3;
	}
	/* Define the hover highlight color for the table row */
    .hoverTable tr:hover {
          background-color: #245269;
    }
</style>



	<div class="container">
	    <div id="label"> 
		<div class="row">
		<div class = "col-lg-6 "> 






<table class="table table-hover" style="overflow-y:scroll">  

    <thead>
        <tr><td></td><td><div class="text-left">Patient</div></td><td><div class="text-left"></div></td><td><div class="text-center">Treatment Cost</div></td><td><div class="text-center">Predicted Time To Funding</div></td></tr>
    </thead>
    
    <tbody>
    
    
    {% for row in sorted_list %}
     
     <tr><td>{{loop.index}}</td><td><div class="text-left"><a href = "{{sorted_list[loop.index0][0]['ProfileURL']}}" >{{sorted_list[loop.index0][0]['PatientName']}}</a>
			        from {{sorted_list[loop.index0][0]['Country']}}<br>
			    {{sorted_list[loop.index0][0]['Age']}} year old {{sorted_list[loop.index0][0]['Gender']}} </td>
            <td><p><img src="{{sorted_list[loop.index0][0]['PicURL']}}" height="75" ></p>  
			</td>
	    
	        <td><div class="text-center">${{sorted_list[loop.index0][0]['Cost']}}</div></td>
	
	        <td class=""><div class="text-center">{{sorted_list[loop.index0][0]['Predictions']}} days</div></td>
	
        </tr>
        
    {% endfor %}
    
  
     </tbody>
        
  
</table>

</div>

</div>
</div>
</div>


{% endblock %}

